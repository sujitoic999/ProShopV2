  "bugs": {
    "url": "https://github.com/sujitoic999/ProshopV2/issues"
  },
  "homepage": "https://github.com/sujitoic999/ProshopV2#readme",
  "dependencies": {
    "@paypal/react-paypal-js": "^8.2.0",
    "bcryptjs": "^2.4.3",
    "color": "^4.2.3",
    "colors": "^1.4.0",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.1.2"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
